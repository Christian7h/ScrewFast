---
//src/pages/index.astro
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@components/sections/landing/HeroSection.astro";
import HeroSectionAlt from "@components/sections/landing/HeroSectionAlt.astro";
import ClientsSection from "@components/sections/landing/ClientsSection.astro";
import FeaturesGeneral from "@components/sections/features/FeaturesGeneral.astro";
import FeaturesNavs from "@components/sections/features/FeaturesNavs.astro";
import TestimonialsSection from "@components/sections/testimonials/TestimonialsSection.astro";
import PricingSection from "@components/sections/pricing/PricingSection.astro";
import FAQ from "@components/sections/misc/FAQ.astro";
import AnnouncementBanner from "@components/ui/banners/AnnouncementBanner.astro";
import heroImage from "@images/hero-image.webp";
import faqs from "@data/faqs.json";
import features from "@data/features.json";
import pricing from "@data/pricing.json";
import featureImage from "@images/feature-image.webp";
import construction from "@images/construction-image.avif";
import tools from "@images/automated-tools.webp";
import dashboard from "@images/dashboard-image.avif";

const avatarSrcs: Array<string> = [
  "https://images.unsplash.com/photo-1568602471122-7832951cc4c5?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1531927557220-a9e23c1e4794?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1541101767792-f9b2b1c4f127?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&&auto=format&fit=facearea&facepad=3&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1492562080023-ab3db95bfbce?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
];
---

<MainLayout>
  <AnnouncementBanner
    btnId="dismiss-button"
    btnTitle="Explore ScrewFast on GitHub"
    url="https://github.com/mearashadowfax/ScrewFast"
  />

  <HeroSection
    title=`Disfruta del Sol y la Piscina con <span
        class="text-skyBlue-500 dark:text-skyBlue-400">Sunsummer</span>`
    subTitle="Descubre equipos de piscina de alta calidad y servicios para tu disfrute máximo del verano."
    primaryBtn="Explorar"
    primaryBtnURL="/products"
    secondaryBtn="Contáctanos"
    secondaryBtnURL="/contact"
    withReview={true}
    avatars={avatarSrcs}
    rating=`<span class="font-bold">4.  8</span> / 5`
    starCount={4}
    reviews=`Más de<span class="font-bold">12.8k</span> Opiniones`
    src={heroImage}
    alt="Equipos y accesorios de piscina de Sunsummer"
  />

  <ClientsSection
    title="Confianza de Propietarios de Piscinas"
    subTitle="Experimenta la confiabilidad elegida por propietarios de piscinas en toda la región."
  />

  <FeaturesGeneral
    title="Mejora Tu Experiencia en la Piscina"
    subTitle="En Sunsummer, ofrecemos todo lo que necesitas para crear el oasis perfecto junto a la piscina. Desde herramientas de piscina de vanguardia hasta servicios de mantenimiento expertos, estamos dedicados a hacer inolvidable tu verano."
    src={featureImage}
    alt="Productos y accesorios de piscina de Sunsummer "
    features={features}
  />

  <FeaturesNavs
  title=`Personaliza las <span class="text-skyBlue-500 dark:text-skyBlue-400">ofertas de Sunsummer</span> para satisfacer perfectamente tus necesidades de piscina.`
  tabs={[
    {
      heading: "Equipos de Última Generación",
      content:
        "Potencia tus proyectos con los equipos de última generación de Sunsummer. Experimenta una eficiencia mejorada en el manejo de piscinas con nuestras soluciones automatizadas sofisticadas.",
      svg: "tools",
      src: tools,
      alt: "Equipos amarillos y negros sobre campo de césped marrón",
      first: true,
    },
    {
      heading: "Paneles Intuitivos",
      content:
        "Navega con facilidad utilizando los paneles intuitivos de Sunsummer. Configura y supervisa tus proyectos de manera eficiente, con interfaces diseñadas para una gestión de flujo de trabajo rápida y efectiva.",
      svg: "dashboard",
      src: dashboard,
      alt: "Captura de pantalla o representación gráfica del panel intuitivo",
      second: true,
    },
    {
      heading: "Funcionalidades Robustas",
      content:
        "Minimiza la complejidad, maximiza la productividad. Las funcionalidades robustas de Sunsummer están diseñadas para optimizar tu experiencia con piscinas, ofreciendo resultados que destacan por su excelencia.",
      svg: "house",
      src: construction,
      alt: "Estructura metálica gris cerca de una grúa torre durante el día",
    },
  ]}
/>

  <TestimonialsSection
  title="Opiniones de Clientes"
  subTitle="Descubre por qué nuestros clientes aman Sunsummer."
  testimonials={[
    {
      content:
        "Los equipos de piscina de Sunsummer han transformado nuestro patio en un paraíso. La calidad y durabilidad son incomparables, y el servicio al cliente es excepcional.",
      author: "Juan Pérez",
      role: "Propietario de Piscina",
      avatarSrc:
        "https://randomuser.me/api/portraits/men/32.jpg",
    },
  ]}
  statistics={[
    {
      count: "20 mil+",
      description:
        "propietarios de piscinas satisfechos",
    },
    {
      count: "95%",
      description:
        "índice de satisfacción del cliente",
    },
    {
      count: "50%",
      description:
        "aumento en la eficiencia de la piscina con herramientas y servicios de Sunsummer",
    },
    {
      count: "3x",
      description: "montaje más rápido con soluciones innovadoras para piscinas",
    },
  ]}
/>

  <PricingSection pricing={pricing} />

  <FAQ title="Preguntas Frecuentes sobre Nuestras Piscinas" faqs={faqs} />

  <HeroSectionAlt
    title="Construyamos Juntos Tu Piscina Ideal"
    subTitle="Sunsummer te ofrece piscinas personalizadas de calidad, diseñadas para transformar tu espacio exterior en un oasis de relajación."
    url="https://www.sunsummer.cl/contacto"
  />

</MainLayout>

